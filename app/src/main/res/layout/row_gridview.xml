<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="85dp"
    android:layout_margin="5dp"
    android:orientation="vertical"
    android:padding="5dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <Button
            android:id="@+id/tombol_bayar"
            android:layout_width="100dp"
            android:layout_height="38dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/ic_button_background"
            android:fontFamily="@font/josefin_sans_bold"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="10dp"
            android:text="Bayar"
            android:textSize="10dp"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/rate_comments_exp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:id="@+id/ic_rate"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="2dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_rate" />

                <TextView
                    android:id="@+id/txt_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="2dp"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/josefin_sans_regular"
                    android:text="rate"
                    android:textColor="#000"
                    android:textSize="10dp" />

                <ImageView
                    android:id="@+id/ic_experience"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="2dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_experience" />

                <TextView
                    android:id="@+id/txt_experience"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/josefin_sans_regular"
                    android:text="10th"
                    android:textColor="#000"
                    android:textSize="10dp" />

                <ImageView
                    android:id="@+id/ic_comments"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="2dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_comments" />

                <TextView
                    android:id="@+id/txt_comments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/josefin_sans_regular"
                    android:text="comments"
                    android:textColor="#000"
                    android:textSize="10dp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:adjustViewBounds="true"
            android:src="@drawable/nerd"
            card_view:layout_constraintBottom_toTopOf="@id/rate_comments_exp"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.006"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintVertical_bias="0.1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="20dp"
            card_view:layout_constraintStart_toEndOf="@+id/imageView6"
            card_view:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/txt_pekerjaan_tutor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:fontFamily="@font/josefin_sans_regular"
                    android:text="A"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/txt_biaya_tutor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/josefin_sans_regular"
                    android:text="B"
                    android:textSize="12dp"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/txt_nama_tutor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/josefin_sans_regular"
                    android:text="C"
                    android:textSize="12dp"
                    android:textColor="#000" />
        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
